SELECT T2.USERNAME
        ,  MODULE
        , T1.DISK_READS
        , T1.ELAPSED_TIME/1000000 as ELAPSED_SEC
        , T1.EXECUTIONS
        , T1.DISK_READS / DECODE(T1.EXECUTIONS, 0, 1, T1.EXECUTIONS) AS EXEC_RATIO
        , T1.COMMAND_TYPE
        , T1.SQL_TEXT
   FROM GV$SQLAREA T1
   INNER JOIN DBA_USERS T2
   ON T1.PARSING_USER_ID = T2.USER_ID
   WHERE T2.USERNAME = :1
   ORDER BY T1.ELAPSED_TIME/1000000 DESC
   , T1.DISK_READS ;
